#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 会員情報入力
      -# = render "devise/shared/links"
      = render "devise/shared/error_messages", resource: resource
    .account-page__inner--right.user-form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          .field-label
            = f.label :nickname
          .field-input
            = f.text_field :nickname, autofocus: true
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email
        .field
          .field-label
            = f.label :password
            %i (英数字8文字以上)
          .field-input
            = f.password_field :password, autocomplete: "off"
        .field
          .field-label
            = f.label :password_confirmation
          .field-input
            = f.password_field :password_confirmation, autocomplete: "off"

        .field
          .field-label
            = f.label :family_name
          .field-input
            = f.text_field :family_name, autofocus: true

        .field
          .field-label
            = f.label :first_name
          .field-input
            = f.text_field :first_name, autofocus: true

        .field
          .field-label
            = f.label :family_furigana
          .field-input
            = f.text_field :family_furigana, autofocus: true

        .field
          .field-label
            = f.label :first_furigana
          .field-input
            = f.text_field :first_furigana, autofocus: true

        .field
          .field-label
            = f.label :birthday_year
          .field-input
            = f.text_field :birthday_year, autofocus: true

        .field
          .field-label
            = f.label :birthday_month
          .field-input
            = f.text_field :birthday_month, autofocus: true


        .field
          .field-label
            = f.label :birthday_day
          .field-input
            = f.text_field :birthday_day, autofocus: true
        .actions
          = f.submit "Next", class: 'btn'
          
        = render "devise/shared/links"
