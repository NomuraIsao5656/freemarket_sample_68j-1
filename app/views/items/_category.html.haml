-cates.each do |cate|
  .ProductList
    %a
    = link_to item_path(cate.id) do
      %figure.ProductList--img
        = image_tag cate.images[0].picture.url
      .ProductList--body
        %h3.Name
          = truncate(cate.name, length:13)
        .Details
          %ul
            %li #{cate.price}円
            %li
              %i.fa.fa-star.likeIcon
                0
          %p (税込)

