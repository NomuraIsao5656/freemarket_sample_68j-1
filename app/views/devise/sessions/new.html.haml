= render partial: 'shared/headerB'

.SessionWrapper
  .Session
    .Session__sign
      .Session__sign--sign
        アカウントをお持ちでない方はこちら
      = link_to "新規会員登録", new_user_registration_path, class: :"Session__sign--btn"
      
    .Session__input
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: :"メールアドレス", class: "Session__input--mail"
        = f.password_field :password, autocomplete: "current-password", placeholder: :"パスワード", class: "Session__input--pass"
        = f.submit "ログイン", class: "Session__input--loginbtn"

        = link_to "パスワードをお忘れの方", new_user_password_path, class: "Session__input--forget"
        
= render partial: 'shared/footerB'
